extends layout

block content
    div(class='container')
        div(class='row justify-content-center')
            div(class='col-12 col-md-9')
                h1 Are you sure you want to delete this Post?
                div(class='card mt-4')
                    div(class='card-body')
                        h5(class="card-title") #{post.title}
                            h6(class="card-subtitle mb-2 text-muted") Author: #{post.author_name}
                        p #{post.message}
                    div(class='card-footer d-flex flex-row')
                        small(class='text-muted') Date: #{moment(post.timestamp).format('MM/DD/YYYY')}
                            form(action='' method='POST')
                                button(type="submit" class="btn btn-danger ms-auto btn-sm") Confirm