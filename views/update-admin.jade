extends layout

block content
    div(class='container')
        div(class='row justify-content-center')
            div(class='col-12 col-md-9')
                div(class='card mt-4')
                    div(class='card-body')
                        h1 Admin Code
                        p(class='text-danger') #{message}
                        form(action='' method='POST')
                            label(for='admin_code' class="form-label") Admin Passcode
                            input(name='admin_code' placeholder='Admin Passcode' type='text' class="form-control" required)
                            button(type="submit" class="btn btn-primary")  Join
